docker.enabled = true
process.container = 'lifebitai/prs'

params {
  // Pipeline options
  outdir = 'results'

  // Base Dataset or Discovery Dataset
  assoc  = false
  index  = false
  A1     = false
  A2     = false
  chr    = false
  stat   = false
  snp    = false
  bp     = false
  se     = false
  pvalue = false

  // Target dataset
  target     = false
  pheno_file = false
  ignore_fid = false
  pheno_col  = false

  // Clumping
  clump_kb      = 300
  clump_r2      = 0.1
  clump_p       = false // TODO: add default value
  no_clump      = false
  proxy         = false
  missing       = 'MEAN_IMPUTE'
  ld            = false
  ld_dose_thres = false
  ld_geno       = false
  ld_info       = false

  // Covariate
  cov     = false
  cov_col = false

  // Polygenic Risk Calculations
  no_regress = false
  model      = '0/1/1' // Additive model
  score      = 'avg'
  all_score  = false
  quantiles  = false

  // Additional
  perm      = false
  print_snp = false
}